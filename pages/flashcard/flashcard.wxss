/* pages/flashcard/flashcard.wxss */
.count{
    width:100%;
    height:100%;
    display:flex;
    justify-content: center;
    padding-top:8%;
    font-size:20npx;
    color: #4c4242;
}
.choose{
    margin-top:130%;
}

#knowBtn{
    width: 30%;
    background-color:#19be6b;
    font-size:18px;
    position: absolute;
    border-radius: 10px;
    margin-left: 14%;
}
#unknowBtn{
    width: 30%;
    background-color:#ed3f14;
    font-size:18px;
    border-radius: 10px;
    position: absolute;
    margin-left: 58%;
}


.cards{
    margin-left: 16%;
}


.xin .border{
    height: 0;
    border-top: 1px solid #ccc;
    margin-top: 20px;
    width:20%;
}

.xin-list{
    width: 100%;
    position: relative;
}



.xin-list .single{
    transition: all 4s;
    overflow: hidden;
    border-radius: 1px;
    margin-top:15%;
    width: calc(100% - 60px);
    height: calc(85vh - 150px - 11vh);
    background: #fff;
    position: absolute;
    box-shadow: 3px 3px 10px 0px #777;
}

.word{
    width:100%;
    display:flex;
    justify-content: center;
    font-size:40px; 
    margin-top:55%;
    font-family: serif;
    font-weight: bold;
}

.meaning{
    width:100%;
    display:flex;
    justify-content: center;
    font-size:25px;
    margin-top:20%;
    color: #2e2e2e;
    font-family: Youyuan;
    
}
