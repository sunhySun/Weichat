.btn-box {
  display: flex;
  justify-content: center;
  /* background-color: aqua; */
  width: 100%
}

.btn {
  display: flex;
  justify-content: start;
  align-items: center;
  width: 300px;
  height: 60px;
  color: #495060;
  font-size: 15px;
  background-color: #dddee1;
  margin-bottom: 15px;
  border-radius: 98rpx;
  padding: 30px;
}

.right {
  background-color: #00baad;
}

.wrong {
  background-color: tomato;
}

.hover {
  color: #fff;
}